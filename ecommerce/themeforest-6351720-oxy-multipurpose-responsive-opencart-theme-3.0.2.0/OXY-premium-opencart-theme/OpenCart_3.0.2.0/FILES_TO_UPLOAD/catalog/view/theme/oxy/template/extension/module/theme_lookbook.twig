
<style type="text/css">
#theme-lookbook{{ module }} {
	background-color: {{ module_bg_color }};
}
#theme-lookbook{{ module }} h2 {
	color: {{ module_title_color }};
}
#content #theme-lookbook{{ module }} h2:before {
	border-bottom-color: {{ module_title_border_color }};
}
#theme-lookbook{{ module }} .theme-lookbook-subtitle {
	color: {{ module_subtitle_color }};
}
</style>


<div id="theme-lookbook" class="panel panel-default panel-inline module-style-2 full-width-container">
<div id="theme-lookbook{{ module }}" class="box-content theme-lookbook-content panel-inline-content">
  {% if lookbook.title !='' %}
  <div class="theme-lookbook-title panel-inline-title">
  <h2>{{ lookbook.title }}</h2>
  {% if lookbook.subtitle !='' %}
  <div class="theme-lookbook-subtitle panel-inline-subtitle subtitle">{{ lookbook.subtitle }}</div>
  {% endif %}
  </div>
  {% endif %}
  {% if lookbook.title !='' %}
  <div class="panel-inline-items mgrb">
  {% else %}
  <div class="panel-inline-items full-width">
  {% endif %}
  <div class="theme-lookbook-items{{ module }}">
  {% for banner in banners %}
  <div class="theme-lookbook-item">
  <img src="{{ banner.image }}" alt="{{ banner.title }}" title="{{ banner.title }}" />
  <span class="theme-lookbook-bg"></span>
  <a href="{{ banner.link }}">
  <div class="panel-inline-description">
  <span class="btn btn-default theme-lookbook-item-title">{{ banner.title }}</span>
  <span class="btn btn-default theme-lookbook-item-title view-now">{{ t1o_text_view[lang_id] }}</span>
  </div>
  </a>
  </div>
  {% endfor %}
  </div>
  </div>
</div>
</div>
<script type="text/javascript"><!--
$('.theme-lookbook-items{{ module }}').owlCarousel({
	items: '{{ pr_id }}',
	itemsMobile : [479, 2],
	singleItem: false,
	scrollPerPage: false,
	pagination: false,
	navigation: true,
	navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>', '<i class="fa fa-chevron-right fa-5x"></i>']
});
--></script>