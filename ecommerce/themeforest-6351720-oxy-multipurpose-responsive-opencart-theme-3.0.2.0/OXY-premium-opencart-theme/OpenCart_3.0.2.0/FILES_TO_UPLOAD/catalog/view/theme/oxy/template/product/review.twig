{% if reviews %}
{% for review in reviews %}
<table class="table table-striped table-bordered">
  <tr>
    <td class="text-right rating-td">
    <div class="rating-author"><strong>{{ review.author }}</strong></div>
    <div class="rating">
      {% for i in 1..5 %}
      {% if review.rating < i %}
      <span class="fa fa-stack fa-g"><i class="fa fa-star fa-stack-2x"></i></span>
      {% else %}
      <span class="fa fa-stack fa-y"><i class="fa fa-star fa-stack-2x"></i></span>
      {% endif %}
      {% endfor %}
    </div>
    <div class="rating-date">{{ review.date_added }}</div>
    </td>
    <td>
    <p class="rating-text subtitle">{{ review.text }}</p>
    </td>
  </tr>
</table>
{% endfor %}
<div class="text-right">{{ pagination }}</div>
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %} 
