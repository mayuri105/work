
<style type="text/css">
#theme-store-tv{{ module }} {
	background-color: {{ module_bg_color }};
}
#theme-store-tv{{ module }} h2 {
	color: {{ module_title_color }};
}
#content #theme-store-tv{{ module }} h2:before {
	border-bottom-color: {{ module_title_border_color }};
}
#theme-store-tv{{ module }} .theme-store-tv-subtitle {
	color: {{ module_subtitle_color }};
}
</style>

<div id="theme-store-tv" class="panel panel-default panel-inline module-style-2 full-width-container">
<div id="theme-store-tv{{ module }}" class="box-content theme-store-tv-content panel-inline-content">
  {% if store_tv.title !='' %}
  <div class="theme-store-tv-title panel-inline-title">
  <h2>{{ store_tv.title }}</h2>
  {% if store_tv.subtitle !='' %}
  <div class="theme-store-tv-subtitle panel-inline-subtitle subtitle">{{ store_tv.subtitle }}</div>
  {% endif %}
  </div>
  {% endif %}
  {% if store_tv.title !='' %}
  <div class="panel-inline-items mgrb">
  {% else %}
  <div class="panel-inline-items full-width">
  {% endif %}
  <div class="theme-store-tv-items{{ module }}">
  {% for banner in banners %}
  <div class="theme-store-tv-item">
  <a href="{{ banner.link }}" title="{{ banner.title }}" class="popup-play">
  <img src="{{ lazy_load_placeholder }}" data-src="{{ banner.image }}" alt="{{ banner.title }}" title="{{ banner.title }}" class="lazyload" />
  <span class="theme-store-tv-bg"></span>
  <span class="store-tv-hover-box"><i class="fa fa-play"></i></span>
  </a>
  </div>
  {% endfor %}
  </div>
  </div>
</div>
</div>
<script type="text/javascript"><!--
$(document).ready(function() {
	$('.popup-play').magnificPopup({
		disableOn: 700,
		type: 'iframe',
		mainClass: 'mfp-movies',
		removalDelay: 160,
		preloader: false,
		fixedContentPos: false,
		gallery: {
			enabled:true
		}
	});
});
//--></script> 
<script type="text/javascript"><!--
$('.theme-store-tv-items{{ module }}').owlCarousel({
	items: '{{ pr_id }}',
	itemsMobile : [479, 2],
	singleItem: false,
	scrollPerPage: true,
	pagination: false,
	navigation: true,
	navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>', '<i class="fa fa-chevron-right fa-5x"></i>']
});
--></script>